<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="ToolbarIconStyle">
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@color/hintTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="tint">@color/colorOnAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="DialogStyle">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="EditTextStyle.Bold">
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:background">@drawable/btn_secondary_bg</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/btn_secondary_textcolor</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/btn_primary_bg</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/btn_primary_textcolor</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="DefinitionNumberStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_definition_number</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExampleNumberStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/bg_example_number</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOnAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="DefinitionEditTextStyle">
        <item name="android:background">@drawable/bg_edittext_addwordfragment_definitiontext</item>
        <item name="android:padding">4dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>