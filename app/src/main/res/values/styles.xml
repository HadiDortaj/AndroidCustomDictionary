<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="ToolbarIconStyle">
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="HintTextStyle">
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="tint">@color/colorOnAccent</item>
    </style>

    <style name="DialogTheme">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InputStyle">
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:background">@drawable/btn_secondary_bg</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@drawable/btn_secondary_textcolor</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/btn_primary_bg</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@drawable/btn_primary_textcolor</item>
    </style>

</resources>