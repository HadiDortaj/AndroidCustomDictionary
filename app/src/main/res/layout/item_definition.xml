<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="definition"
            type="com.hadi.android.custom.dictionary.frameowork.model.DefinitionEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_definition_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_definition_number"
            android:fontFamily="@string/font_family_light"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/colorOnPrimary"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_definition_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="@string/hint_definition_text"
            android:text="@={definition.definitionText}" />

        <EditText
            android:id="@+id/edt_definition_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>

</layout>
