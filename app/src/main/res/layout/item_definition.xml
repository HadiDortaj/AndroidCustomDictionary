<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="counter"
            type="Integer" />

        <variable
            name="definition"
            type="com.hadi.android.core.doman.Definition" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_definition_number"
            style="@style/DefinitionNumberStyle"
            android:clickable="true"
            android:focusable="true"
            android:text="@{`` + counter}" />

        <EditText
            android:id="@+id/edt_definition_title"
            style="@style/DefinitionTextEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="6.5"
            android:hint="@string/hint_definition_text"
            android:text="@={definition.definitionText}" />

        <Spinner
            android:id="@+id/spinner_definition_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:dropDownWidth="wrap_content"
            android:minWidth="0dp"
            app:adapter="@{@stringArray/word_classes}"
            app:selectedItem="@={definition.type}" />

    </LinearLayout>

</layout>
