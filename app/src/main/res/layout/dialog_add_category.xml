<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.hadi.android.custom.dictionary.presenter.dialog.AddCategoryViewModel" />

        <variable
            name="dialog"
            type="com.hadi.android.custom.dictionary.presenter.dialog.AddCategoryDialog" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:theme="@style/DialogTheme"
            app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_dialog_title"
                    style="@style/DialogTitleStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="@string/dialog_title_create_new_category"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_input_label"
                    style="@style/HintTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/hint_category_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_dialog_title" />

                <EditText
                    android:id="@+id/edt_category_title"
                    style="@style/InputStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="343"
                    android:text="@{viewmodel.groupTitle}"
                    app:layout_constraintEnd_toEndOf="@+id/txt_input_label"
                    app:layout_constraintStart_toStartOf="@+id/txt_input_label"
                    app:layout_constraintTop_toBottomOf="@+id/txt_input_label" />

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/SecondaryButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp"
                    android:onClick="@{() -> dialog.dismiss()}"
                    android:text="@string/action_cancel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edt_category_title"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/btn_save"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:onClick="@{() -> viewmodel.onBtnAddCategoryClick()}"
                    android:text="@string/action_save"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_cancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline6"
                    app:layout_constraintTop_toTopOf="@+id/btn_cancel"
                    app:layout_constraintVertical_bias="0.0" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</layout>
